<div class="d-flex col col-lg-12">
    <div class="d-flex left-menu">
        <ul class="nav-item">
            <li><%= link_to  "Home", root_path %></li>
            <li><%= link_to  "User", users_path %></li>
            <li><%= link_to "Post", posts_path%></li>
            <li class="menu-item"><a href="">About</a></li>
            <li class="menu-item"><a href="">Help</a></li>
        </ul>
    </div>
    <div class="d-flex right-menu">
        <ul class="nav-item">
            <% if logged_in? %>
                <li><%= link_to current_user[:name], user_path(current_user), method: :get %>
                    <ul class="sub-menu">
                        <li><%= link_to  "Profile", user_path(current_user) %></li>
                        <li><%= link_to  "Log Out", logout_path(current_user), method: :delete %></li>
                    </ul>
                </li>
            <% else %>
                <li><%= link_to  "Sign In", login_path %></li>
            <% end %>
        </ul>
    </div>
</div>