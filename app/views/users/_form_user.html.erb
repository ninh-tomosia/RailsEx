<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email, type: 'email' %>
    <%= f.label :phone %>
    <%= f.text_field :phone, type: 'tel' %>
    <%= f.label :password %>
    <%= f.text_field :password, type: 'password' %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.submit "#{@name_btn}" %>
<% end %>